'''saldo=0

print(
    "1- Ver saldo \n"
    "2- Depositar \n"
    "3- Sacar \n"
    "4- Sair"
)

while True:
    botao= int(input("oque deseja? "))
    if botao == 1:
        print(saldo)
    
    elif botao == 2:
        deposito= float(input("quanto deseja depositar? "))
        saldo += deposito
    elif botao == 3:
        sacar= float(input("quanto deseja sacar? "))
        if saldo < sacar:
            print("saldo insuficiente")
        else:
            saldo -= sacar
    elif botao == 4:
        print("operação finalizada.")
        break
    else:
        print("escolha invalida")'''

